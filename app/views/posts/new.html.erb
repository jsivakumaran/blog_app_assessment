<h1>New Post</h1>

<% if @post.errors.any? %>
  <h3> Errors were made: Try again.</h3>
  <ul>
    <% @post.errors.full_messages.each do |m| %>
      <li> <%= m %> </li>
    <% end %>
  </ul>
<% end %>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br>
  <% f.label :body %>
  <%= f.text_area :body, cols: 100, rows: 40 %>
  <br>
  <%= f.submit %>
<% end %>
